      <ipv4>10.200.0.2/24</ipv4>
      <ipv6>2001:db8:200::2/64</ipv6>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <filetree seq="on_boot" root="/tmp/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
