#!/bin/bash

cd `dirname $0`
CDIR=$(pwd)

if [ "$1" == 'start' ]; then 
    echo "-- Starting test:   mcjoin -i eth1 -s $2 $3 $4 $5 -p $6"
    #nohup mcsender -t3 -ieth1 224.100.10.10:1234 &
    nohup mcjoin -i eth1 -t 3 -s $2 $3 $4 $5 -p $6
    sleep 2
elif [ "$1" == 'stop' ]; then 
    killall mcjoin
else
    echo ""
    echo "Usage:"
    echo "    $0 start <mcast_group> <port>"
    echo "    $0 stop"
    exit 1
fi